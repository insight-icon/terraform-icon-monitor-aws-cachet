version: "3"

networks:
  web:
    driver: bridge

services:

  redis:
    image: 'bitnami/redis:latest'
    ports:
      - '6379'
    env_file:
      - .env
    volumes:
      - '.:/bitnami/redis/data'
    networks:
      - web

  cachet:
    build:
      context: .
      args:
        - fqdn={{ fqdn }}
        - cachet_ver=2.4
    ports:
      - "443:8000"
    env_file:
      - .env
    environment:
      - DB_DRIVER=pgsql
      - DB_HOST={{ db_host | default('postgres') }}
      - DB_PORT=5432
      - DB_DATABASE={{ db_database | default('postgres') }}
      - DB_USERNAME={{ db_username | default('postgres') }}
      - DB_PASSWORD={{ db_password | default('postgres') }}
      - DB_PREFIX=chq_

      - CACHE_DRIVER=redis

      - SESSION_DOMAIN={{ fqdn }}
      - APP_DEBUG=false
      - DEBUG=false
    restart: on-failure

{% if db_host is not defined %}

    links:
      - postgres:postgres
    depends_on:
      - postgres

  postgres:
    image: postgres:9.5
    volumes:
      - /var/lib/postgresql/data
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    restart: always

{% endif %}

